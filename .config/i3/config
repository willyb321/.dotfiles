bindsym $mod+Shift+x exec "i3-nagbar -t warning -m 'What do you want to do?' -b 'Poweroff' 'systemctl poweroff' -b 'Reboot' 'systemctl reboot' -b 'Close session' 'pkill -u kevin' -b 'Suspend' 'systemctl suspend'"

# Resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 4 px or 4 ppt
        bindsym k resize grow height 4 px or 4 ppt
        bindsym l resize shrink height 4 px or 4 ppt
        bindsym semicolon resize grow width 4 px or 4 ppt

        # Same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "[p]oweroff [r]eboot [s]uspend [l]ogout"  {
				bindsym p exec poweroff
				bindsym r exec reboot
				bindsym s exec systemctl suspend
				bindsym l exec pkill -u kevin

				bindsym Return mode "default"
				bindsym Escape mode "default"
}

bindsym $mod+Shift+q mode "[p]oweroff [r]eboot [s]uspend [l]ogout"

### Keybindings ###

# Sound controls
bindsym XF86AudioRaiseVolume exec amixer -q sset 'Master' 1%+ #increase sound volume
bindsym XF86AudioLowerVolume exec amixer -q sset 'Master' 1%- #decrease sound volume
bindsym XF86AudioMute exec amixer -q sset Master toggle # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 1 # decrease screen brightness
bindsym Shift+XF86MonBrightnessUp exec xbacklight -set 50 # increase directly to 50%
bindsym Shift+XF86MonBrightnessDown exec xbacklight -set 1 # decrease directly to 1%

# Media player controls
bindsym $modAlt+Shift+Up exec playerctl play-pause
bindsym $modAlt+Shift+Down exec playerctl stop
bindsym $modAlt+Shift+Right exec playerctl next
bindsym $modAlt+Shift+Left exec playerctl previous

# Touchpad control
bindsym XF86TouchpadToggle exec ./touchpad.sh # toggle touchpad

# Scrot
